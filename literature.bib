@article{Gryspeerdt2014,
abstract = {The observed strong link between aerosol optical depth ($\tau$) and cloud top pressure (ptop) has frequently been interpreted as the invigoration of convective clouds by aerosol, with increased $\tau$ being strongly correlated with decreases in ptop (increases in cloud top height). A strong correlation between $\tau$ and cloud fraction (fc) has also been observed. Using satellite-retrieved data, here we show that p top is also strongly correlated to fc, and when combined with the strong sensitivity between fc and $\tau$, a large proportion of the relationship between ptop and $\tau$can be reconstructed. Given the uncertainties about the influence of aerosol-cloud interactions on the $\tau$-fc relationship, this suggests that a large fraction of the $\tau$-ptop correlation may not be due to aerosol effects. Influences such as aerosol humidification and meteorology play an important role and should therefore be considered in studies of aerosol-cloud interactions. {\textcopyright} 2014. American Geophysical Union. All Rights Reserved.},
