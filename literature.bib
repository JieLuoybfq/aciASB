keywords = {Aerosols,Desert,Moderate resolution imaging spectroradiometer (MOD,Multi-angle Imaging Spectro-Radiometer (MISR),Remote sensing,Satellite applications,Seaviewing Wide Field-of-view Sensor (SeaWiFS),Terra},
