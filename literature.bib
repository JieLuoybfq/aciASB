file = {:home/marus200/Documents/library/Soni et al/Soni et al. - 2011 - Wavelength dependence of the aerosol Angstrom exponent and its implications over Delhi, India.pdf:pdf},
issn = {02786826},
journal = {Aerosol Science and Technology},
number = {12},
